#define FIRST_DIR "../../conf/first"
#define SECOND_DIR "../../conf/second"

typedef enum equal_result
{
    EQUAL,
    DIFF_SIZE,
    MISS_KEY,
    DIFF_VALUE,
} equal_result_t;

equal_result_t map_string_equals(map_string_t *f, map_string_t *s)
